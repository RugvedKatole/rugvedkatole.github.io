---
// Projects Section - "What I've built"
const projects = [
  {
    title: "Project Alpha",
    description: "A sophisticated web application that solves real-world problems with elegant code and thoughtful UX.",
    tags: ["React", "Node.js", "PostgreSQL"],
    link: "#",
  },
  {
    title: "Project Beta",
    description: "High-performance system built for scale, handling millions of requests with sub-100ms response times.",
    tags: ["Python", "Redis", "Docker"],
    link: "#",
  },
  {
    title: "Project Gamma",
    description: "Open-source tool used by developers worldwide to streamline their workflow and boost productivity.",
    tags: ["TypeScript", "Rust", "WebAssembly"],
    link: "#",
  },
];
---

<section class="projects" id="projects">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">What I've Built</h2>
      <p class="section-description">
        A selection of projects that showcase my skills and passion for building great software.
      </p>
    </div>

    <div class="projects__grid">
      {projects.map((project) => (
        <article class="project-card">
          <div class="project-card__content">
            <h3 class="project-card__title">{project.title}</h3>
            <p class="project-card__description">{project.description}</p>
            <div class="project-card__tags">
              {project.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
            <a href={project.link} class="project-card__link">
              View Project â†’
            </a>
          </div>
        </article>
      ))}
    </div>

    <div class="projects__more">
      <a href="/projects" class="btn btn--outline">View All Projects</a>
    </div>
  </div>
</section>

<style>
  .projects {
    padding: 5rem 0;
    background: #f8f9fa;
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #1a202c;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .section-description {
    font-size: 1.125rem;
    color: #4a5568;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .projects__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .project-card {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    border: 1px solid #e2e8f0;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  .project-card__title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 0.75rem;
  }

  .project-card__description {
    font-size: 1rem;
    color: #4a5568;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: #edf2f7;
    color: #4a5568;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 0.375rem;
  }

  .project-card__link {
    display: inline-flex;
    align-items: center;
    color: #667eea;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .project-card__link:hover {
    color: #764ba2;
    transform: translateX(4px);
  }

  .projects__more {
    text-align: center;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
  }

  .btn--outline {
    background: transparent;
    color: #667eea;
    border: 2px solid #667eea;
  }

  .btn--outline:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
  }

  /* Mobile-first responsive design */
  @media (min-width: 640px) {
    .projects__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 639px) {
    .section-title {
      font-size: 2rem;
    }

    .section-description {
      font-size: 1rem;
    }

    .project-card {
      padding: 1.5rem;
    }
  }
</style>
