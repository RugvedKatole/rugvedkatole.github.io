---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';

const genAIProjects = [
  {
    title: "Accelerative Synthetic Data Generation",
    description: "Intelligent diffusion-based filtering to detect and remove inauthentic synthetic videos 9× faster with early exit diffusion pipelines. Achieves 75% compute savings and 6× faster video generation.",
    tags: ["Diffusion Models", "PyTorch", "Synthetic Data", "Optimization"],
    slug: "/projects/synthetic-data-acceleration",
    github: "#",
  },
  {
    title: "Ortho-Fuse: Orthomosaic Generation for Crop Health",
    description: "Uses intermediate optical flow estimation for synthetic frame generation in orthomosaic creation from sparse aerial images. Enables high-quality crop health analysis with reduced image overlap (50% vs. traditional 70-80%).",
    tags: ["Optical Flow", "Computer Vision", "Agriculture", "ICPP 2025"],
    slug: "/projects/ortho-fuse",
    paper: "#",
    github: "#",
  },
];

const hybridProjects = [
  {
    title: "World Foundation Models + VLA Integration",
    description: "Augmented real-world video datasets for VLA training, addressing data scarcity with minimal trajectories. Enables efficient policy training maximizing task performance and scalable robotic learning.",
    tags: ["VLA Models", "World Models", "Foundation Models", "Robotics"],
    slug: "/projects/vla-world-models",
    github: "#",
  },
  {
    title: "Physics-based Digital Twin for Wildlife Monitoring",
    description: "Photorealistic NVIDIA Omniverse simulation with generative animal behaviors, herd dynamics, and drone responses. Reduces field deployment costs and accelerates algorithm prototyping.",
    tags: ["Omniverse", "Digital Twins", "Physics Simulation", "Wildlife AI"],
    slug: "/projects/digital-twin-wildlife",
    github: "#",
  },
  {
    title: "SmartWilds: Multimodal Wildlife Dataset",
    description: "Generated synthetic multimodal dataset for wildlife behaviors using world models, supporting privacy-constrained ecological AI. Boosts robust classification from scarce data with drone and camera-trap integration.",
    tags: ["World Models", "Wildlife AI", "Multimodal", "Dataset"],
    slug: "#",
    github: "#",
  },
];

const roboticsProjects = [
  {
    title: "Autonomous Vineyard Rover for Data Collection",
    description: "Deployed rover with segmentation neural network and depth sensing for lane centering on uneven terrain. Achieves robust navigation with 40° slip compensation in real field tests.",
    tags: ["Autonomous Navigation", "Computer Vision", "Agriculture", "Depth Sensing"],
    slug: "#",
    github: "#",
  },
  {
    title: "Multi-Agent RL for Optimal Field Scouting",
    description: "CNN-integrated reinforcement learning framework for heterogeneous agents in agricultural scouting. 60% reduction in scouting needs, 80% accuracy, 4.8× labor cost savings, 36% farmer profit boost.",
    tags: ["Multi-Agent RL", "Agriculture", "CNN", "Optimization"],
    slug: "#",
    paper: "https://arxiv.org/abs/2303.01602",
    github: "#",
  },
  {
    title: "Decentralized Autonomous Intersection Management",
    description: "Level 3.5 motion and behavior planning using road-marking intent detection and graph-theoretic coordination. Communication-free, deadlock-free navigation across 255 scenarios.",
    tags: ["Autonomous Vehicles", "Graph Theory", "Motion Planning", "Decentralized"],
    slug: "/projects/autonomous-intersection",
    paper: "https://arxiv.org/abs/2303.17871",
    github: "#",
  },
  {
    title: "Priority-Balanced Patrol Planning",
    description: "Distributed online patrol-planning algorithm with scalable trajectories balancing priority and non-priority site coverage. Finite-time visit guarantees with sim-to-real validation.",
    tags: ["Multi-Robot Systems", "Patrolling", "Graph Algorithms", "Coverage"],
    slug: "/projects/priority-patrolling",
    paper: "https://arxiv.org/abs/2303.14438",
    github: "#",
  },
  {
    title: "Swarm Synergy: Communication-Free Formations",
    description: "Autonomous community formations for multi-robot swarms without communication. Validated in simulations, experiments, and real-world lab tests for reliable deployment.",
    tags: ["Swarm Robotics", "Decentralized Control", "Multi-Agent Systems"],
    slug: "/projects/swarm-synergy",
    paper: "https://arxiv.org/abs/2303.13424",
    github: "#",
  },
  {
    title: "Heterogeneous UAV Swarm for Crop Monitoring",
    description: "Multi-agent reinforcement learning-based coordination for UAVs in detailed crop health assessment. Scalable multi-agent deployment without reliance on synthetic data.",
    tags: ["UAV", "Multi-Agent RL", "Agriculture", "Swarm Coordination"],
    slug: "/projects/marl-uav-swarm",
    paper: "https://arxiv.org/abs/2303.01602",
    github: "https://github.com/rugvedkatole/MARL-UAV",
  },
];
---

<BaseLayout
  title="Projects - Rugved Katole"
  description="Explore my robotics and AI projects: autonomous vineyard rovers, multi-agent RL frameworks, decentralized AV systems, and swarm algorithms."
>
  <Navigation />

  <main class="projects-page">
    <div class="container">
      <div class="page-header">
        <h1 class="page-title">Projects</h1>
        <p class="page-description">
          A showcase of my work in robotics, generative AI, and intelligent systems.
          Each project represents a step toward making robots more capable and intelligent.
        </p>
        <div class="page-divider"></div>
      </div>

      <!-- Generative AI Projects -->
      <section class="project-category">
        <div class="category-header">
          <h2 class="category-title">Generative AI</h2>
          <p class="category-description">
            Diffusion models, synthetic data generation, and foundation models
          </p>
        </div>
        <div class="projects-grid">
          {genAIProjects.map((project) => (
            <article class="project-card">
              <h3 class="project-title">
                <a href={project.slug} class="project-title-link">{project.title}</a>
              </h3>
              <p class="project-description">{project.description}</p>
              <div class="project-tags">
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <div class="project-links">
                {project.github !== "#" && (
                  <a href={project.github} class="project-link" target="_blank" rel="noopener noreferrer">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2z"/>
                    </svg>
                    Code
                  </a>
                )}
                {project.paper !== "#" && (
                  <a href={project.paper} class="project-link" target="_blank" rel="noopener noreferrer">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                      <polyline points="14,2 14,8 20,8"></polyline>
                    </svg>
                    Paper
                  </a>
                )}
                {project.demo !== "#" && (
                  <a href={project.demo} class="project-link" target="_blank" rel="noopener noreferrer">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polygon points="5 3 19 12 5 21 5 3"></polygon>
                    </svg>
                    Demo
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      </section>

      <!-- Generative AI + Robotics Projects -->
      <section class="project-category">
        <div class="category-header">
          <h2 class="category-title">Generative AI + Robotics</h2>
          <p class="category-description">
            Combining foundation models with robotic systems for intelligent behavior
          </p>
        </div>
        <div class="projects-grid">
          {hybridProjects.map((project) => (
            <article class="project-card">
              <h3 class="project-title">
                <a href={project.slug} class="project-title-link">{project.title}</a>
              </h3>
              <p class="project-description">{project.description}</p>
              <div class="project-tags">
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <div class="project-links">
                {project.github !== "#" && (
                  <a href={project.github} class="project-link" target="_blank" rel="noopener noreferrer">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2z"/>
                    </svg>
                    Code
                  </a>
                )}
                {project.paper !== "#" && (
                  <a href={project.paper} class="project-link" target="_blank" rel="noopener noreferrer">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                      <polyline points="14,2 14,8 20,8"></polyline>
                    </svg>
                    Paper
                  </a>
                )}
                {project.demo !== "#" && (
                  <a href={project.demo} class="project-link" target="_blank" rel="noopener noreferrer">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polygon points="5 3 19 12 5 21 5 3"></polygon>
                    </svg>
                    Demo
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      </section>

      <!-- Robotics Projects -->
      <section class="project-category">
        <div class="category-header">
          <h2 class="category-title">Robotics</h2>
          <p class="category-description">
            Autonomous systems, multi-agent coordination, and robot control
          </p>
        </div>
        <div class="projects-grid">
          {roboticsProjects.map((project) => (
            <article class="project-card">
              <h3 class="project-title">
                <a href={project.slug} class="project-title-link">{project.title}</a>
              </h3>
              <p class="project-description">{project.description}</p>
              <div class="project-tags">
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <div class="project-links">
                {project.github !== "#" && (
                  <a href={project.github} class="project-link" target="_blank" rel="noopener noreferrer">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2z"/>
                    </svg>
                    Code
                  </a>
                )}
                {project.paper !== "#" && (
                  <a href={project.paper} class="project-link" target="_blank" rel="noopener noreferrer">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                      <polyline points="14,2 14,8 20,8"></polyline>
                    </svg>
                    Paper
                  </a>
                )}
                {project.demo !== "#" && (
                  <a href={project.demo} class="project-link" target="_blank" rel="noopener noreferrer">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polygon points="5 3 19 12 5 21 5 3"></polygon>
                    </svg>
                    Demo
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .projects-page {
    min-height: 100vh;
    padding: 6rem 0 4rem;
    background: var(--color-white);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-black);
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }

  .page-divider {
    width: 80px;
    height: 4px;
    background: var(--color-black);
    margin: 0 auto;
  }

  .project-category {
    margin-bottom: 5rem;
  }

  .project-category:last-child {
    margin-bottom: 0;
  }

  .category-header {
    margin-bottom: 2rem;
  }

  .category-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-black);
    margin-bottom: 0.5rem;
  }

  .category-description {
    font-size: 1rem;
    color: var(--color-text-light);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .project-card {
    background: var(--color-white);
    border: 2px solid var(--color-gray-200);
    border-radius: 0.5rem;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    border-color: var(--color-black);
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .project-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-black);
    margin-bottom: 0.75rem;
  }

  .project-title-link {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .project-title-link:hover {
    color: var(--color-gray-600);
  }

  .project-description {
    font-size: 1rem;
    color: var(--color-text-light);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: var(--color-gray-900);
    color: var(--color-white);
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 0.25rem;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-black);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9375rem;
    transition: all 0.2s ease;
  }

  .project-link:hover {
    color: var(--color-gray-600);
    transform: translateX(2px);
  }

  @media (min-width: 640px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .projects-page {
      padding: 5rem 0 3rem;
    }

    .page-title {
      font-size: 2.25rem;
    }

    .category-title {
      font-size: 1.75rem;
    }

    .project-card {
      padding: 1.5rem;
    }
  }
</style>
